@model Teste_Upd8.Models.ViewModel.EstadoMunicipioViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <input asp-for="Cliente.Nome" class="form-control" />
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Cpf" class="control-label"></label>
                <input asp-for="Cliente.Cpf" class="form-control" />
                <span asp-validation-for="Cliente.Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.DataNascimento" class="control-label"></label>
                <input asp-for="Cliente.DataNascimento" class="form-control" />
                <span asp-validation-for="Cliente.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Sexo" class="control-label"></label><br />
                <input type="radio" asp-for="Cliente.Sexo" value="Feminino" />Feminino
                <input type="radio" asp-for="Cliente.Sexo" value="Masculino" />Masculino
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Endereco" class="control-label"></label>
                <input asp-for="Cliente.Endereco" class="form-control" />
                <span asp-validation-for="Cliente.Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Estado" class="control-label"></label>
                <select asp-for="Cliente.Estado" asp-items="@(new SelectList(Model.Estados))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Cidade" class="control-label"></label>
                <select asp-for="Cliente.Cidade" asp-items="@(new SelectList(Model.Cidades))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
